@model FoodWuzUp.DAL.RestaurantMenuItem
@{
    int? ParentID = ViewBag.ParentID;
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    <div class="col-md-10">
        @Html.Hidden("ParentID", ParentID)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ChildID, "MenuItem", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Child.Name, "MenuItem", htmlAttributes: new { Name = "MenuItem", @class = "form-control", @id = "restaurantMenuItem", @size = "50" })
        @Html.Hidden("ChildID", null)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.RatingID, "RatingID", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("RatingID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RatingID, "", new { @class = "text-danger" })
    </div>
</div>


<script>
    PropertyAutocomplete('@Url.Action("Lookup", "MenuItems")', 'restaurantMenuItem', 'ChildID');
</script>
