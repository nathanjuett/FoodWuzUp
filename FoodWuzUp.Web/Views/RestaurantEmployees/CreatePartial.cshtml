@model FoodWuzUp.DAL.RestaurantEmployee
@{
    int? ParentID = ViewBag.ParentID;
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="form-group">
    <div class="col-md-10">
        @Html.Hidden("ParentID", ParentID)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ChildID, "Employee", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Child.Name, "Employee", htmlAttributes: new { @class = "form-control", @id = "restaurantEmployee", @size = "50" })
        @Html.Hidden("ChildID", null)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.EmployeeTypeID, "Employee Type", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.EmployeeType.Name, "Employee Type", htmlAttributes: new { @class = "form-control", @id = "employeeType", @size = "50" })
        @Html.Hidden("EmployeeTypeID", null)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.RatingID, "RatingID", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("RatingID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RatingID, "", new { @class = "text-danger" })
    </div>
</div>

<script>
    PropertyAutocomplete('@Url.Action("Lookup", "Employees")', 'restaurantEmployee', 'ChildID');
    PropertyAutocomplete('@Url.Action("Lookup", "EmployeeTypes")', 'employeeType', 'EmployeeTypeID');
</script>
