@model FoodWuzUp.DAL.User

@{
    ViewBag.Title = "AuthenticatedIndex";
    //List<FoodWuzUp.DAL.Group>Groups = (List<FoodWuzUp.DAL.Group>)Model.Groups;
    }

<h2>AuthenticatedIndex</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AuthID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AuthID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<div class="row">
    <div class="col-md-4">
        <h3>My Groups</h3>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
            </tr>

            @foreach (var item in Model.Groups)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                       @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </table>
        <p>
            @Html.ActionLink("Create New", "Create", "Groups")
        </p>
        <h3>My Memberships</h3>
        <table class="table">
            <tr>
                <th>
                    Creator
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
            </tr>
            @foreach (var item in Model.Memberships)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Child.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parent.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Parent.Description)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
